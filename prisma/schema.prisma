generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Post {
  // Unique identifier for the post
  // @id = Primary key, @default(cuid()) = generates unique ID
  id        String   @id @default(cuid()) @map("_id")
  
  // Main title of the blog post
  title     String
  
  // The main content/body of the blog post
  content   String
  
  // URL-friendly version of the title for routing
  // @unique = ensures no duplicate slugs
  slug      String   @unique

  tags        String[] // Array of strings
  
  // Controls visibility - false=draft, true=published
  // @default(false) = posts start as drafts
  published Boolean  @default(false)
  
  // Auto-sets when post is created
  // @default(now()) = sets to current timestamp
  createdAt DateTime @default(now())
  
  // Auto-updates when post is modified
  // @updatedAt = automatically updates on changes
  updatedAt DateTime @updatedAt

  // Maps this model to "posts" table in database
  // Prevents Prisma from using "Post" as table name
  @@map("posts")
}

model Project {
  // Unique identifier for the project
  id          String   @id @default(cuid()) @map("_id")
  
  // Project name/title
  title       String
  
  // Brief overview of the project
  description String
  
  // Your role in the project (e.g., "Full Stack Developer")
  role        String
  
  // Array of technologies/tools used
  // String[] = stores as array of strings in database
  tools       String[]
  
  // Detailed explanation of the project and challenges solved
  summary     String
  
  // Results/impact of the project (e.g., "Increased conversion by 35%")
  outcome     String
  
  // Project thumbnail/image URL
  // String? = optional field (can be null)
  imageUrl    String?
  
  // GitHub repository link
  githubUrl   String?
  
  // Live demo/production URL
  liveUrl     String?
  
  // When project was added to portfolio
  createdAt   DateTime @default(now())
  
  // When project was last updated
  updatedAt   DateTime @updatedAt

  // Maps to "projects" table in database
  @@map("projects")
}


// prisma/schema.prisma
model ContactMessage {
  id        String   @id @default(cuid()) @map("_id")
  email     String
  message   String
  createdAt DateTime @default(now())
  read      Boolean  @default(false)

  @@map("contact_messages")
}